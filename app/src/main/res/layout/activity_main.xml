<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="false"
    tools:context="com.example.gadau.warcraftmock.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            style="@style/TitleScreenName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <Button
            android:id="@+id/singlePlayerBtn"
            style="@style/MainMenuButton"
            android:onClick="onBtnClick"
            android:text="@string/main_menu_single" />

        <Button
            android:id="@+id/multiPlayerBtn"
            style="@style/MainMenuButton"
            android:onClick="onBtnClick"
            android:text="@string/main_menu_multi" />

        <Button
            android:id="@+id/optionsBtn"
            style="@style/MainMenuButton"
            android:onClick="onBtnClick"
            android:text="@string/main_menu_options" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:text="@string/sample_version_name"
        android:textColor="@color/yellow" />
</RelativeLayout>
